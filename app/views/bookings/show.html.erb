<%
    band = Band.find(@booking.band_id)
    club = Club.find(@booking.club_id)
%>
<div class="page-header">
  <h1><%=t '.title', :default => "#{band.name} @ #{club.name}" %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Band:</strong></dt>
  <dd><%= link_to band.name, band_path(band) %></dd>
  <dt><strong>Club:</strong></dt>
  <dd><%= link_to club.name, club_path(club) %></dd>
  <dt><strong>Show Date:</strong></dt>
  <dd><%= @booking.show_date.strftime('%b %d, %Y') %></dd>
  <dt><strong>Cover Charge:</strong></dt>
  <dd><%= sprintf('$%0.02f', @booking.fee) %></dd>
</dl>

<div class="form-actions">
  <%= link_to 'Back To All Bookings', bookings_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_booking_path(@booking), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              booking_path(@booking),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
